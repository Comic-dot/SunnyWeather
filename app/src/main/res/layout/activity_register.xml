<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RegisterActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/im">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="注 册"
        android:textColor="#FFFFFF"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:text="   请填写 :"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="105dp" />

    <EditText
        android:layout_marginTop="59dp"
        android:id="@+id/account_1"
        android:layout_width="322dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/frame_shape"
        android:hint="账 户~~"
        android:paddingLeft="12dp"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:inputType="textPassword"
        android:layout_marginTop="48dp"
        android:id="@+id/password_1"
        android:layout_width="322dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/frame_shape"
        android:hint="密 码~~"
        android:paddingLeft="12dp"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_1" />


    <Button
        android:id="@+id/signin_1"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:background="@drawable/frame_shape"
        android:onClick="ButtonClick_1"
        android:text="返 回"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_1" />

    <Button
        android:id="@+id/register_1"
        android:layout_width="104dp"
        android:layout_height="50dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/frame_shape"
        android:onClick="ButtonClick_2"
        android:text="注  册"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_1" />



</androidx.constraintlayout.widget.ConstraintLayout>